!!!
:css
  #main{
    float: left !important;
    border: 2px solid black !important;
    width: 70% !important;
    margin-left: 190px !important;
    text-align: center;
  }
  hr{
    color: black !important;
    background-color: black;
    margin-top: 3px;
    margin-bottom: 10px;
    padding: 1px;
  }
%html
  %head
    %title Telm
    = stylesheet_link_tag "./validationEngine.jquery","./web-app-theme/base", "./web-app-theme/themes/default/style", "./web-app-theme/override", :cache => true
    = javascript_include_tag "jquery-1.7.2.min"
    = javascript_include_tag "jquery.validationEngine"
    = javascript_include_tag "jquery.validationEngine-en"
    = javascript_include_tag "admission"
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Telm
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "/admission/add"}= t("web-app-theme.settings", :default => "Admissions")
        #main-navigation
          %ul.wat-cf
      .notice
        - if params[:notice]
          #{params[:notice]}
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
      #footer
        .block
          %p
            Copyright &copy; #{Time.now.year} Telm.
      #sidebar
        = yield :sidebar

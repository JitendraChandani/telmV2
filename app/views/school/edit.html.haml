= form_for @school,:url=>{ :controller=>'school',:action=>'update',:id=>@school.id } do |f|
  -if @school.errors.any?
    #error_explanation
      %h2
      = "#{pluralize(@school.errors.count, "error")} prohibited this blog_entry from being saved:"
      %ul
        - @school.errors.full_messages.each do |msg|
          %li
            = msg
  %table.school_form
    %tr.header
      %td{:colspan=>2}
        School Details
    %tr
      %td
        = f.label "Name"
      %td
        = f.text_field :name , :class=>'validate[required]'
    %tr
      %td
        = f.label "Address"
      %td
        = f.text_area :address, :class=>'validate[required]',:rows=>3,:cols=>26
    %tr
      %td
        = f.label "Contact Person"
      %td
        = f.text_field :contact_person,:class=>'validate[required]'
    %tr
      %td
        = f.label "Email"
      %td
        = f.text_field :email
    %tr
      %td
        = f.label "Contact No:"
      %td
        = f.text_field :contact_no
    %tr
      %td
        = f.label "Licence Size"
      %td
        = f.text_field :no_of_licences
    %tr
      %td{:colspan=>2,:align=>'center'}
        %input{:type=>'submit',:class=>'button',:value=>"Update"}